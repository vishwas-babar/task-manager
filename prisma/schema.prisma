generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ...existing code...

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String    
  tasks     Task[]
  createdAt DateTime @default(now())
}

model Task {
  id          String    @id @default(cuid())
  title       String
  status      taskStatus    @default(pending)
  dueDate     DateTime?
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  createdAt   DateTime  @default(now())
}


enum taskStatus {
  pending
  completed
}